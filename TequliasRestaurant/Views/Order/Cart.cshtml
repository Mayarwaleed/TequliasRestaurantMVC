@model OrderViewModel

<h1 class="text-center my-4">My Cart</h1>

<!--Form to finalize and create the order-->
<form asp-action="PlaceOrder" method="post" class="shadow p-4 rounded bg-light">
    <h3 class="mb-4 text-primary">Order Items</h3>
    <table class="table table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.OrderItems.Count; i++)
            {
                <tr>
                    <td>@Model.OrderItems[i].ProductName</td>
                    <td>@Model.OrderItems[i].Quantity</td>
                    <td>@Model.OrderItems[i].Price.ToString("C")</td>
                    <td>@(Model.OrderItems[i].Quantity * Model.OrderItems[i].Price).ToString("C")</td>
                </tr>
            }
            <tr class="fw-bold">
                <td colspan="3" class="text-end">Grand Total:</td>
                <td class="bg-primary bg-gradient text-white">@Model.TotalAmount.ToString("C")</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-primary btn-lg px-4 shadow-sm">
            <i class="bi bi-check-circle me-2"></i> Place Order
        </button>
    </div>
</form>

<style>
    h1 {
        font-family: 'Roboto', sans-serif;
        color: #4a4a4a;
    }

    table {
        border-collapse: collapse;
    }

    th, td {
        vertical-align: middle;
    }

    th {
        background-color: #343a40;
        color: #fff;
    }

    tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
