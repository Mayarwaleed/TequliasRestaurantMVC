@model OrderViewModel

@{
    ViewBag.Title = "Create Order";
}

<h1 class="text-center my-4">Create Order</h1>

<div class="row g-4">
    @foreach (Product product in @Model.Products)
    {
        <div class="col-md-4">
            <form asp-action="AddItem" method="post">
                <div class="card shadow-sm border-0 h-100">
                    <img src="@Url.Content("~/images/" + product?.ImageUrl)" class="card-img-top fixed-image-height" alt="@product.Description">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title text-center">@product.Name</h5>
                        <p class="card-text text-center text-muted">@product.Price.ToString("C")</p>
                        <input type="hidden" value="@product.ProductId" name="prodId" />
                        <div class="input-group mb-3">
                            <span class="input-group-text">Qty</span>
                            <input type="number" name="prodQty" class="form-control" min="1" />
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-primary" type="submit">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    }
</div>

<style>
    .fixed-image-height {
        height: 200px;
        object-fit: cover;
    }

    h1 {
        font-family: 'Roboto', sans-serif;
        color: #4a4a4a;
    }

    .card-title {
        font-weight: 500;
    }
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
